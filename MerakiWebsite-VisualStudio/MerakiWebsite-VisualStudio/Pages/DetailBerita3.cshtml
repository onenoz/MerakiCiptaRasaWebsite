@page
@model MerakiWebsite_VisualStudio.Pages.DetailBerita3Model
@{
    ViewData["Title"] = "Detail Berita 3";
    Layout = "_LayoutBerita";
}
<html>
<head>
    <style>
        .text-news {
            text-align: justify;
        }
    </style>
</head>
<body>
    <!-- Navbar & Hero Start -->
    <div class="container-xxl position-relative p-0">
    </div>
    <!-- Navbar & Hero End -->
    <!-- Detail Berita Start -->
    <div class="container-xxl py-5">
        <div class="container py-5 px-lg-5">
            <div class="row g-3 portfolio-container" id="berita-container">
                <div class="col-lg-12 col-md-6 row g-2 portfolio-item first wow fadeInUp" data-wow-delay="0.1s">
                    <div class="col-lg-12 justify-content-center rounded overflow-hidden">
                        <h1 class="mb-5 text-center">Penjualan Drop Saat Pandemik, UMKM Tangsel Ini Genjot Lewat Digital.</h1>
                        <h4 class="text-center text-primary">2023-06-26</h4>
                        <p class="section-title text-secondary justify-content-center"> <span></span> Last Updated: 2023-06-26 <span></span>  </p>

                    </div>
                    <div class="position-relative overflow-hidden rounded">
                        <img class="img-fluid align-items-center" style="width:1000px;" src="img/Foto IDN Times 3.jpeg" alt="">
                    </div>
                    <div class="col-lg-12 col-md-6 row g-2 wow fadeInUp" data-wow-delay="0.1s">
                        <p class="mb-5 text-md-start justify-content-center text-news justify" style="text-align: justify;">
                            Pandemik COVID-19 benar-benar mengubah kebiasaan masyarakat. Pemilik usaha yang bisa memanfaatkan perubahan akan bisa bertahan di tengah dropnya penjualan 
                            karena pembeli tak lagi datang ke toko atau penjual. 
                            Salah satu pelaku Usaha Mikro Kecil Menengah (UMKM) Santi
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Detail Berita End -->
</body>
</html>